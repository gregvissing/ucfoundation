<header class="[ intro ] [ pad-top-900 pad-bottom-max ]">
  <img src="https://foundation.uc.edu/image/_2019-redesign/triangle-pattern.png" alt="hero triangle pattern" class="trianglePattern">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
    {% endif %}
	<div class="btn-container">
		<a href="/Campaign/About" class="button-primary button parallelogram white-bg"><span class="skew-fix">CAMPAIGN INFO</span></a>
		<a href="#" id="show-modal" class="button-secondary button parallelogram"><span class="skew-fix">WATCH VIDEO</span></a>
	</div>
  </div>
</header>
